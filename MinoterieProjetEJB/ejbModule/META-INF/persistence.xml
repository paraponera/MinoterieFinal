<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="MinoterieProjetEJB" transaction-type="JTA">
		<jta-data-source>java:/MinoterieDS</jta-data-source>
		<class>com.minoterie.projet.domain.Equipement</class>
		<class>com.minoterie.projet.domain.Point</class>
		<class>com.minoterie.projet.domain.Production</class>
		<class>com.minoterie.projet.domain.Rapport</class>
		<class>com.minoterie.projet.domain.Site</class>
		<class>com.minoterie.projet.domain.Spark</class>
		<class>com.minoterie.projet.domain.Stock</class>
		<class>com.minoterie.projet.domain.StockMatierePremiere</class>
		<class>com.minoterie.projet.domain.StockProduitsFinis</class>
		<class>com.minoterie.projet.domain.Utilisateur</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
